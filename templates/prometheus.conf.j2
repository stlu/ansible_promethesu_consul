
global:
  scrape_interval: 15s
  evaluation_interval: 30s
  # scrape_timeout is set to the global default (10s).


scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
    - targets: ['{{ ansible_host }}:9090']
  - job_name: 'node_exporter'
    scrape_interval: 5s
    static_configs:
    - targets:
    {% for host in groups['node_exporter'] %}
    {% if inventory_hostname != host %}
      - '{{ host }}:9100'
    {% endif %}
    {% endfor %}